FROM python:3.11-slim

# 🏷️ METADATA
LABEL maintainer="AI Trading Team"
LABEL description="Tests IA Avancée pour Trading Orchestrator"
LABEL version="2.0.0"

# 📂 RÉPERTOIRE DE TRAVAIL
WORKDIR /app

# 📦 INSTALLATION DES DÉPENDANCES SYSTÈME
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/*

# 📋 COPIER ET INSTALLER LES REQUIREMENTS
COPY requirements-tests.txt .
RUN pip install --no-cache-dir -r requirements-tests.txt

# 📋 COPIER LES SCRIPTS DE TESTS
COPY test_advanced_ai_complete.py .

# 📊 CRÉER RÉPERTOIRE POUR RÉSULTATS
RUN mkdir -p /app/results

# 🏃 COMMANDE PAR DÉFAUT
CMD ["python", "test_advanced_ai_complete.py"] 